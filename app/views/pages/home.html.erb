<div class="container">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg);">
    <div class="container">
      <h1><strong> The Best Local Dishes</strong>   <strong>  sharing meals with love</strong>!</h1>
      <p>food  brings us together  experience  meals made with love</p>
    </div>

  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search local dinners
      </button>
    </div>
  <% end %>

</div >


<div class="cards">
  <% @dinners.sample(3).each do |dinner| %>
    <%= render "dinners/dinner_preview_card", dinner: dinner %>
  <% end %>
</div>

<section class="section-how-to mt-3">
  <h2 class="gallery-headline">How it works:</h2>
  <div class="image-gallery">
    <div class="img-flex-item">
      <div class="img-salmon-border"><i class="fa-solid fa-user"></i></div>
      <div class="img-caption">1. Create your account</div>
    </div>
    <div class="img-flex-item">
      <div class="img-salmon-border"><i class="fa-solid fa-pizza-slice"></i></div>
      <div class="img-caption">2. Pick a dinner you want to join or host one</div>
    </div>
    <div class="img-flex-item">
      <div class="img-salmon-border"><i class="fa-solid fa-bookmark"></i></div>
      <div class="img-caption">3. Book it</div>
    </div>
    <div class="img-flex-item">
      <div class="img-salmon-border"><i class="fa-solid fa-face-smile"></i></div>
      <div class="img-caption">4. Enjoy</div>
    </div>
  </div>
</section>
