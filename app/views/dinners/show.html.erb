<h1>Details on <%= @dinner.title %></h1>

<h2>Date: <%= @dinner.date %></h2>
<h3>Category: <%= @dinner.category.capitalize %></h3>
<p>Location: <%=  @dinner.user.address %></p>
<p>Host: <%=@dinner.user.name %></p>

<% if user_signed_in? %>
  <%= link_to "Join this dinner", dinner_bookings_path(@dinner), data: {turbo_method: :post}, class: "btn btn-success" %>
<% end %>

<%= link_to "Back to all dinners", dinners_path, class: "btn btn-secondary" %>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
