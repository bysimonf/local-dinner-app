<div class="card-preview" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/featured/?dinner&<%= rand(1..1000) %>')">
      <%= link_to dinner.title, dinner_path(dinner) %>
      <div class="card-preview-info d-flex justify-content-between align-items-end">
        <div>
          <div><i class="fa-solid fa-utensils"></i> <%= dinner.category %></div>
          <div><i class="fa-solid fa-location-dot"></i> <%= dinner.user.address %></div>
          <div><i class="fa-regular fa-calendar-days"></i> <%= dinner.date %></div>
        </div>
        <div>
          <%= link_to "Check details", dinner_path(dinner), class: "btn btn-salmon" %>
        </div>
      </div>
    </div>
